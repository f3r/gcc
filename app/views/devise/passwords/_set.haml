.span8.offset2
  - if @user
    %h1= t("users.registration.set_password_welcome_title", :user_name => @user.full_name)
    %p{:style => 'margin-bottom: 30px;'}= t("users.registration.set_password_welcome_text")
  .credentials-box{:style => 'height:242px'}
    .section
      %h3= t("users.registration.choose_a_password")

      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'validated' }) do |f|
        = render 'fields', :f => f
        %button.btn.btn-primary.btn-large.float-right{:type => 'submit', :style => 'margin-top:0px'}
          = t("submit")