.credentials-box
  .section.span8
    %h3= t("users.registration.confirm_reset_password")

    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'validated' }) do |f|
      = render 'fields', :f => f
      %button.btn.float-right{:type => 'submit'}
        = t("submit")