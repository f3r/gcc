- SiteConfig.price_units.each do |unit|
  - field_name = "price_#{unit}".to_sym
  .control-group
    = f.label field_name, t("products.#{field_name}") + '*', :class => 'control-label'
    .controls
      .input-prepend
        %span.add-on.currency-sign= @resource.currency.label
        = f.text_field field_name, :class => "validate[custom[number],min[1],required] span2 autosave_pricing"
