= form_for :user, :url => profile_path, :method => :put, :html => {:id => "new_password", :class => 'form-horizontal'} do |f|
  /Password Section
  .section-header= t("users.section_header_user_password")

  .control-group
    = f.label :password, t("users.password"), :class => 'control-label'
    .controls
      = icon_tooltip(:private)
      = f.password_field :password, :class => "validate[required,minSize[6]]", :id => 'new_password_password'
  
  .control-group
    = f.label :password_confirmation, t("users.retype_password"), :class => 'control-label'
    .controls
      = icon_tooltip(:private)
      = f.password_field :password_confirmation, :class => "validate[required,equals[new_password_password]]"
  
  .clearfix
  .span4.float-right
    = f.submit t("save"), :class => 'btn btn-primary'
    = link_to t("cancel"), profile_path, :class => 'btn btn-secondary'
  .clearfix